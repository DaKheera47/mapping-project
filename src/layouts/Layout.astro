---
import '@/styles/global.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title} - Mapping Project</title>
  </head>

  <body
    class='container mx-auto flex h-screen flex-col items-center justify-center'
  >
    <slot />
  </body>
</html>
