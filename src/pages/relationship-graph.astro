---
import RelationshipGraphEntry from '@/entrypoints/RelationshipGraphEntry';
import Layout from '@/layouts/Layout.astro';
import { checkSession } from '@/lib/checkSession';

const { user, redirect } = await checkSession(Astro.cookies);

if (redirect) {
  return Astro.redirect(redirect);
}
---

<Layout
  title='View Relationship Graph'
  isAuth={!!user}
>
  <RelationshipGraphEntry client:only>
    <div slot='fallback'>Loading...</div>
  </RelationshipGraphEntry>
</Layout>
